<div class="container">

    <h1>Agregar sitio</h1>

    <form method="POST" action="">
        <input name="nombre" type="text" id="nombre" placeholder="nombre" class="form-control my-3">
        {{!-- <input type="text" id="imagen" placeholder="imagen" class="form-control my-3"> --}}
        <input name="descripcion" type="text" id="brevedescripcion" placeholder="brevedescripcion" class="form-control my-3">
        <button class="btn btn-info" type="submit" id="boton">Agregar</button>


    </form>

    <table name="tabla" class="table">
      <thead>
        <tr>
          {{!-- <th scope="col">id</th> --}}
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
        </tr>
      </thead>

<tbody >
     {{#each sitios}}
    <tr>
 <th scope="row"></th>
          <td>{{nombre}}</td>
          <td>{{descripcion}}</td>
    </tr>
    {{/each}}
</tbody>


    </table>
</div>