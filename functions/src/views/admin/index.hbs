<div class="container">

    <h1>Agregar sitio</h1>

    <form method="POST" action="/admin">
        <input name="nombre" type="text" id="nombre" placeholder="nombre" class="form-control my-3">
        {{!-- <input type="text" id="imagen" placeholder="imagen" class="form-control my-3"> --}}
        <input name="descripcion" type="text" id="brevedescripcion" placeholder="brevedescripcion"
            class="form-control my-3">
        <button class="btn btn-info" type="submit" id="boton">Agregar</button>
    </form>

    <table name="tabla" class="table">
        <thead>
            <tr>
                {{!-- <th scope="col">id</th> --}}
                <th scope="col">first</th>
                <th scope="col">born</th>
            </tr>
        </thead>

        <tbody>
            {{#each sitiosagregados}}
            <tr>
                <th scope="row"></th>
                <td>{{nombres}}</td>
                <td>{{descripcion}}</td>
                 <td><a href="" class="btn btn-danger"><i
                                    class="far fa-trash-alt"></i>eliminar</a>
                            <a href="" class="btn btn-info"><i class="far fa-edit"></i>editar</a>
                        </td> 
            </tr>
            {{/each}}
        </tbody>